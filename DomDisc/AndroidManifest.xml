<?xml version="1.0" encoding="UTF-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.bruntt.dominodiscussionwork2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:icon="@drawable/simpsonlogo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name=".DiscussionEntriesViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DatabaseConfigurationsActivity"
            android:label="@string/title_activity_main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DiscussionEntriesViewActivity" />
        </activity>
        <activity
            android:name=".AddDiscussionDatabaseActivity"
            android:label="Add discussion database" />
        <activity
            android:name=".AddDiscussionEntryActivity"
            android:label="Add discussion entry" />
        <activity
            android:name=".ReadDiscussionEntryActivity"
            android:label="Read discussion entry" />
        <activity
            android:name=".LogListActivity"
            android:label="Log Entries">
                        <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DiscussionEntriesViewActivity" />
            </activity>
            
        <activity
            android:name=".PreferenceActivity"
            android:label="Preferences">
                        <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DatabaseConfigurationsActivity" />
            </activity>

        <receiver android:name="PollReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name="ScheduledService" >
        </service>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>